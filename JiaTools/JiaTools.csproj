<Project Sdk="Dalamud.CN.NET.Sdk/14.0.1">

    <PropertyGroup>
        <Authors>AtmoOmen</Authors>
        <Version>1.0.0.0</Version>
        <Description>Useful Tools for dev, build on OmenTools</Description>
        <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
        <IsPackable>false</IsPackable>
        <Title>JiaTools In Public</Title>
        <Configurations>Debug;Release;ReleaseTest;latest</Configurations>
        <Platforms>x64;AnyCPU</Platforms>
    </PropertyGroup>

    <PropertyGroup>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
        <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
        <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
        <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
        <PlatformTarget>AnyCPU</PlatformTarget>
        <UseWindowsForms>true</UseWindowsForms>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <BaseOutputPath>$(SolutionDir)bin</BaseOutputPath>
        <SatelliteResourceLanguages>xxx</SatelliteResourceLanguages>
        <Use_DalamudPackager>false</Use_DalamudPackager>
        <DebugType>none</DebugType>
        <DebugSymbols>false</DebugSymbols>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <Optimize>True</Optimize>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\OmenTools\OmenTools.csproj" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="GuerrillaNtp" Version="3.1.0">
            <Private>true</Private>
        </PackageReference>
        <PackageReference Include="TerraFX.Interop.Windows" Version="10.0.26100.6" />
        <PackageReference Include="TinyPinyin" Version="1.1.0">
            <Private>true</Private>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <Content Include="JiaTools.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
        <EmbeddedResource Include="Shaders\AlphaFix.cso" />
        <EmbeddedResource Include="Shaders\HBlur.cso" />
        <EmbeddedResource Include="Shaders\VBlur.cso" />
    </ItemGroup>

</Project>
